<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/button_bg_hover"
        android:state_pressed="true">
        <shape>
            <stroke
                android:width="3dp"
                android:color="@color/button_bg"/>

            <corners
                android:radius="30dp"/>

            <solid
                android:color="@color/button_bg_hover"/>
        </shape>
    </item>

    <item android:color="@color/button_bg">
        <shape>
            <stroke
                android:width="3dp"
                android:color="@color/button_bg"/>

            <corners
                android:radius="30dp"/>

            <solid
                android:color="@color/button_bg"/>
        </shape>
    </item>

</selector>